<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.zmdx.draft.entity.OperationRecords" table="operation_records" dynamic-insert="true">
	  <id name="id" column="id" type="int" >
			<generator class="native" />
		</id>
		<property name="informerId" column="informer_id"/>
		<property name="operationType" column="operation_type"/>
		<property name="pictureSetId" column="picture_set_id"/>
		<property name="beingInformerId" column="being_informer_id"/>
		<property name="type" column="type"/>
		<property name="datetime" column="datetime"/>
	</class>
	
</hibernate-mapping>
  